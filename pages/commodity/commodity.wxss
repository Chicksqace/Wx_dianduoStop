.active_block {
  margin-bottom: 10px;
  background-color: #F5F5F5;
  padding: 10px;
  border-radius: 8px;
}

.active_item_title {
  padding: 15px;
  background-color: #FFF;
  border-radius: 8px;
  margin-bottom: 10px;
}

.active_title_wrap {
  text-align: center;
  padding-bottom: 2px;
  border-bottom: 1px solid #000;
  width: 80px;
  margin: 0 auto;
}

.active_title {
  display: inline-block;
  font-size: 14px;
  padding: 0 10px;
  padding-bottom: 5px;
  border-bottom: 3px solid #000;
  font-weight: 700;
}

.active_goods_name {
  background-color: #FFF;
  padding: 7px 10px;
  font-size: 14px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.active_item_infor {
  background-color: #FFF;
  font-size: 14px;
  padding: 0 10px;
  padding-bottom: 10px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.active_new_price {
  color: #FF0000;
}

.active_old_price {
  font-size: 12px;
  text-decoration: line-through;
  margin-left: 5px;
}

.active_time {
  font-size: 12px;
}

.active_group_price {
  font-size: 12px;
  color: #FF0000;
}

.zx {
  background-color: azure;
  border: rgb(61, 68, 68) 1px solid;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  text-align: center;
  position: absolute;
  top: 10px;
  right: 10px;
}

.xq {
  position: fixed;
  left: 10%;
  top: 10%;
  width: 80%;
  height: 80%;
  background-color: rgba(235, 245, 220, 0.9);
  border: rgb(119, 114, 114) 1px solid;
  border-radius: 20px;
  display: none;
  z-index: 999;
}

.xq_content {
  padding: 20px;
  overflow-y: auto;
  height: 100%;
}

.c {
  text-align: center;
  margin-top: 10px;
  font-size: 18px;
  font-weight: bold;
}

.gb {
  position: absolute;
  top: 10px;
  right: 10px;
  background-color: rgb(223, 77, 20);
  border: rgb(61, 68, 68) 1px solid;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFF;
}

.item_image {
  width: 100%;
  height: 200px; /* 设置一个固定的高度值 */
  border-radius: 8px;
}

