.bg {
  background: -webkit-linear-gradient(top, white, lightblue, rgb(83, 201, 248));
  height: 100%;
}

.content {
  padding: 10px;
}

.loginTitle {
  display: flex;
  justify-content: space-around;
}

.select {
  color: blue;
  font-weight: bold;
  border-bottom: 2px solid blue;
}

.default {
  color: gray;
}

.hr {
  height: 1px;
  background-color: gray;
  margin: 10px 0;
}

.item {
  border: 1px solid #ddd;
  border-radius: 8px;
  margin-bottom: 10px;
  padding: 10px;
  background-color: white;
}

.item_content_top {
  display: flex;
  align-items: center;
}

.item_content_left {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.item_content_right {
  flex: 1;
}

.h3 {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}

.pl {
  font-size: 14px;
  color: #333;
}

.item_content_bottom {
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
}

.icon {
  display: flex;
  align-items: center;
}

.icon-image {
  width: 20px;
  height: 20px;
  margin-left: 5px;
}

.srk {
  position: absolute;
  bottom: 10px;
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: white;
  padding: 10px 0;
  box-shadow: 0 -1px 5px rgba(0,0,0,0.1);
}

.srkx {
  display: none;
}

.sr {
  width: 80%;
  padding: 5px;
  border: 1px solid #ddd;
  border-radius: 4px;
}

.fb {
  padding: 5px 10px;
  background-color: blue;
  color: white;
  border: none;
  border-radius: 4px;
}
