.tab{
  height: 7vh;
  display: flex;
  line-height: 7vh;
}

.tab view{
  flex: 1 0 auto;
  font-size: 14px;
  color: #333333;
  text-align: center;
}
.tab .active{
  color: #ff5f19;
  border-bottom: 1px solid #ff5f19;
  padding-bottom:1.8vh;
}
.list{
  height: 93vh;
}

.item{
  display: flex;
  
  height: 100px;
  margin: 10px 10px 0 10px;
  background: #DBDBDB; 
}

.item .left{
  flex: 0 1 25%;
  text-align: center;
  
  font-size: 18px;
  margin: 28px 0;
  color: #FFF;
  border-right: 2px dashed #969696;
  margin-right: 8px;
}
.item .left text{
  font-size: 20rpx;
  color: #FFFFFF;
}

.item .right{
  flex: 1 1 auto;
  font-size: 12px;
  color: #999999;
  margin-top: 30px;
  margin-left: 10px;
}
.item .right view{
  line-height: 24px;
}

.item .right text{
  color: #FFF;
}
.state{margin-top: 10px;
margin-left:-10px; 
}
.state text{color: #969696; }