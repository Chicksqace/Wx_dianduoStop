<view class="container">
  <view class="header">
    <text class="title">联系我们</text>
  </view>
  
  <view class="contact-info">
    <view class="info-item">
      <text class="info-label">公司地址:</text>
      <text class="info-value">浙江XXXXXX大学</text>
    </view>
    <view class="info-item">
      <text class="info-label">联系电话:</text>
      <text class="info-value">17777777777</text>
    </view>
    <view class="info-item">
      <text class="info-label">电子邮件:</text>
      <text class="info-value">2965390478@qq.com</text>
    </view>
  </view>
  
  <view class="social-media">
    <text class="social-title">关注我们:</text>
    <view class="social-icons">
      <image src="../../images/img/微信.png" class="social-icon"></image>
      <image src="../../images/img/微博.png" class="social-icon"></image>
      <image src="../../images/img/QQ.png" class="social-icon"></image>
    </view>
  </view>
  
  <view class="contact-form">
    <input class="form-input" placeholder="您的姓名" bindinput="onNameInput"></input>
    <input class="form-input" placeholder="您的邮箱" bindinput="onEmailInput"></input>
    <textarea class="form-textarea" placeholder="您的消息" bindinput="onMessageInput"></textarea>
    <button class="submit-button" bindtap="onSubmit">提交</button>
  </view>
</view>
