.page {
  padding: 20rpx;
}

.car_item_wrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.car_image_wrap {
  width: 100px;
  height: 100px;
}

.car_item_image {
  width: 100%;
  height: 100%;
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.car_item_content {
  flex: 1;
  padding: 20rpx;
}

.car_item_title {
  font-size: 16px;
  color: #333;
  margin-bottom: 10rpx;
}

.car_item_price {
  font-size: 18px;
  color: #f00;
}

.car_item_bot {
  display: flex;
  align-items: center;
}

.car_item_operate {
  display: flex;
  align-items: center;
  margin-left: auto;
}

.car_item_btn {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  color: #333;
  cursor: pointer;
}

.car_item_del {
  margin-right: 10rpx;
}

.car_bot {
  margin-top: 20rpx;
}

.car_bot_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.car_total_money {
  font-size: 18px;
  color: #f00;
}

.car_order_confirm {
  background-color: #f00;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 5rpx;
  cursor: pointer;
}
