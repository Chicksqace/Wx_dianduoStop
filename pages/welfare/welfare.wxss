.container {
  padding: 20px;
  background-color: #f9f9f9;
}

.welfare-list {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.welfare-item {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  overflow: hidden;
  margin-bottom: 20px;
}

.welfare-img {
  width: 100%;
  height: 200px;
}

.welfare-info {
  padding: 15px;
}

.welfare-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

.welfare-description {
  font-size: 14px;
  color: #666;
  margin-bottom: 10px;
}

.welfare-price {
  font-size: 16px;
  color: #e60012;
  margin-bottom: 10px;
}

.welfare-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10px;
}

.welfare-metadata {
  display: flex;
  align-items: center;
  font-size: 14px;
  color: #999;
}

.icon {
  width: 16px;
  height: 16px;
  margin-right: 5px;
}

